<header class="bg-black text-white font-poppins border-b-2 border-orange-500">
    <div class="w-full px-6 md:px-16 py-4 flex items-center justify-between">
        <h1 class="text-2xl font-extrabold text-orange-500">Tracert</h1>
        <button id="menu-btn" class="md:hidden text-white focus:outline-none">
            <i id="menu-icon" class="fas fa-bars text-2xl"></i>
        </button>
        <nav class="hidden md:flex space-x-6">
            <a href="#advantages" class="hover:text-orange-500 transition">Vantagens</a>
            <a href="#services" class="hover:text-orange-500 transition">Serviços</a>
            <a href="#demonstrations" class="hover:text-orange-500 transition">Demonstrações</a>
            <a href="#budget" class="hover:text-orange-500 transition">Orçamento</a>
        </nav>
    </div>
    <div id="mobile-menu" class="md:hidden overflow-hidden max-h-0 transition-all duration-300 ease-in-out bg-black px-6 space-y-2">
        <a href="#advantages" class="block text-white hover:text-orange-500">Vantagens</a>
        <a href="#services" class="block text-white hover:text-orange-500">Serviços</a>
        <a href="#demonstrations" class="block text-white hover:text-orange-500">Demonstrações</a>
        <a href="#budget" class="block text-white hover:text-orange-500">Orçamento</a>
    </div>
</header>

<script>
    const btn = document.getElementById('menu-btn');
    const menu = document.getElementById('mobile-menu');
    const icon = document.getElementById('menu-icon');

    btn.addEventListener('click', () => {
        const isOpen = menu.classList.contains('max-h-0');
    
        menu.classList.toggle('max-h-0', !isOpen);
        menu.classList.toggle('max-h-96', isOpen);
    
        if (isOpen) {
            menu.classList.add('pb-6');
            icon.classList.remove('fa-bars');
            icon.classList.add('fa-times');
        } else {
            menu.classList.remove('pb-6');
            icon.classList.remove('fa-times');
            icon.classList.add('fa-bars');
        }
    });
</script>
