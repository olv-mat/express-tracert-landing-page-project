<section id="demonstrations" class="bg-black text-white py-16 font-poppins px-4">
    <div class="max-w-4xl mx-auto text-center space-y-6">
        <h2 class="text-3xl md:text-4xl font-extrabold"><span class="text-orange-500">Demonstrações</span> na Prática</h2>
        <p class="text-gray-400 text-base md:text-lg max-w-2xl mx-auto">Veja como automatizamos tarefas reais do dia a dia em diferentes contextos empresariais.</p>
    </div>
    <div class="max-w-3xl mx-auto my-8 border-t border-gray-800"></div>
    <div class="max-w-4xl mx-auto">
        <div id="carousel-texts" class="text-center space-y-2 mb-10">
            <h3 id="carousel-title" class="text-orange-500 text-xl md:text-2xl font-semibold">Automação de Documentos</h3>
            <p id="carousel-description" class="text-gray-400 text-sm md:text-base max-w-3xl mx-auto">Veja como extraímos automaticamente informações de notas fiscais e organizamos em relatórios prontos para uso.</p>
        </div>
        <div class="overflow-hidden relative w-full max-w-2xl mx-auto bg-[#111] rounded-lg mt-10">
            <div id="carousel" class="flex transition-transform duration-500 ease-in-out">
                <div class="min-w-full flex justify-center p-6">
                    <img src="https://placehold.co/600x400" alt="Automação de documentos" class="w-full max-w-[800px] h-auto rounded-lg shadow-md object-contain" />
                </div>
                <div class="min-w-full flex justify-center p-6">
                    <img src="https://placehold.co/600x400" alt="Análise de dados" class="w-full max-w-[800px] h-auto rounded-lg shadow-md object-contain" />
                </div>
                <div class="min-w-full flex justify-center p-6">
                    <img src="https://placehold.co/600x400" alt="Web scraping" class="w-full max-w-[800px] h-auto rounded-lg shadow-md object-contain" />
                </div>
            </div>
            <div class="flex justify-center items-center gap-6 py-6">
                <button id="prev" class="text-orange-500 hover:text-orange-400 text-xl">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <div id="indicator" class="text-sm text-gray-400">1 / 3</div>
                <button id="next" class="text-orange-500 hover:text-orange-400 text-xl">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</section>

<script>
    const carousel = document.getElementById('carousel');
    const indicator = document.getElementById('indicator');
    const title = document.getElementById('carousel-title');
    const description = document.getElementById('carousel-description');

    const slides = carousel.children;
    const totalSlides = slides.length;
    let currentIndex = 0;

    const texts = [
        {
            title: 'Automação de Documentos',
            description: 'Veja como extraímos automaticamente informações de notas fiscais e organizamos em relatórios prontos para uso.'
        },
        {
            title: 'Análise de Dados',
            description: 'Acompanhe o processamento de dados de vendas em tempo real, com geração automática de gráficos e relatórios.'
        },
        {
            title: 'Coleta de Dados da Web',
            description: 'Assista à automação acessando sites e extraindo informações úteis para tomada de decisão.'
        }
    ];

    function updateCarousel() {
        const slideWidth = slides[0].offsetWidth;
        carousel.style.transform = `translateX(-${slideWidth * currentIndex}px)`;
        indicator.textContent = `${currentIndex + 1} / ${totalSlides}`;
        title.textContent = texts[currentIndex].title;
        description.textContent = texts[currentIndex].description;
    }

    window.addEventListener('resize', updateCarousel);
    document.getElementById('prev').addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
    });

    document.getElementById('next').addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
    });

    updateCarousel();
</script>
